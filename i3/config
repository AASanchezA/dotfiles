bar {
	id bar-1
	mode invisible
	i3bar_command i3bar
    strip_workspace_numbers yes

    font pango:DejaVu Sans Code, FontAwesome 10
    # font pango:DejaVu Sans Code 10
    position bottom
    #status_command path/to/i3status-rs path/to/your/config.toml
    status_command i3status-rs

    colors {
        separator $term_color3
        background $term_background
        statusline $term_color3
        focused_workspace $term_color6 $term_color6 $term_color3
        active_workspace $term_color0 $term_color0 $term_color3
        inactive_workspace $term_color3 $term_color3 $term_color3
        urgent_workspace $term_color9 $term_color9 $term_background
    }
}

